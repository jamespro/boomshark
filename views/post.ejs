<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/partials/head'); %>
</head>
<body>
    <header>
        <%- include('../views/partials/header'); %>
    </header>


    <div class="container">
    
        <div class="d-flex justify-content-center mt-5" >
            
            <div class="card text" style="width: 18rem;">
                <img class="card-img-top" src="#" alt="image post">
                <div class="card-body">
                  <h5 class="card-title"><%=post.title%></h5>
                  <p class="card-text"><%= post.caption %> </p>
                    <p class="hidden" hidden><%=post._id%></p>
                    <%if(post.user==user.id){ %>
                    <form action="/post/deletePost/<%= post._id %>?_method=DELETE" method="POST" class="col-3 text-center">
                    <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                    <%}%>
                </div>
            </div>    
        </div>
        <div class="d-flex mt-5 justify-content-center">
            <i class="fas fa-heart fa-3x"> <%= post.likes %></i>
        </div>
        
        
        <div class="d-flex mt-5 justify-content-center">
            <a class="btn btn-primary mx-2" href="/profile">Return to Profile</a>
            <a class="btn btn-primary mx-2" href="/feed">Return to Feed</a>
        </div>
        
    </div>

    
    <script src="/js/main.js"></script>
</body>
</html>
