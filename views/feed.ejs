<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/partials/head'); %>
</head>
<body>
    <header>
        <%- include('../views/partials/header'); %>
    </header>
    <div class="container">
        <h2 class="feedHeader">Feed</h2>
        <div class="row justify-content-center">
        <% for(let x in posts) { %>
            <div class="col-6 justify-content-between mt-5 text-center">
                <p><%= posts[x].caption %></p>
                <a href="/post/<%=posts[x]._id%>">
                    <img class="img-fluid" src="<%= posts[x].image%>">
                </a>
            </div>
        <%}%>
        </div>

        <div class="d-flex mt-5 justify-content-center">
            <a class="btn btn-primary mx-2" href="/profile">Return to Profile</a>
            <a class="btn btn-primary mx-2" href="/logout">Log out</a>
        </div>
    </div>


</body>
</html>
